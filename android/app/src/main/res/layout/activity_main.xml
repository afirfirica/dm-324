<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <!-- android:layout_above="@+id/tv_result_label" -->


    <!-- for test -->
    <!--<com.hl3hl3.arcoremeasure.OverlayView-->
        <!--android:id="@+id/overlay_for_test"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignBottom="@+id/fl_content"-->
        <!--android:layout_alignLeft="@+id/fl_content"-->
        <!--android:layout_alignRight="@+id/fl_content"-->
        <!--android:layout_alignTop="@+id/fl_content" />-->



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@android:drawable/ic_menu_edit"
        app:backgroundTint="@color/gray"
        app:elevation="14dp"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|right|end"
        app:rippleColor="@color/gray" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/fl_content"
        android:background="#454545">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/iv_cube1"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube2"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube3"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube4"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube5"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube6"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube7"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube8"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube9"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube10"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube11"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube12"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube13"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube14"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube15"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube16"
                style="@style/cube" />
        </LinearLayout>

    </ScrollView>
    <Button
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnCm"
        android:text="Inch"
        android:textAllCaps="false"
        android:id="@+id/btnInch"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/imgUnit"
        android:text="Cm"
        android:textAllCaps="false"
        android:id="@+id/btnCm"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/unit"
        android:scaleType="fitXY"
        android:id="@+id/imgUnit"/>
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round_button"
        android:text="+"
        android:textSize="30sp"
        android:id="@+id/btnPlus"/>
</RelativeLayout>
